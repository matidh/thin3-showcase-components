{
  "name": "thin3-scaffold",
  "main": "main.js",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "****** LINT ******": "",
    "format": "npm run prettier && npm run lint",
    "prettier": "prettier --config .prettierrc --write \"src/**/*.ts\"",
    "****** TEST ******": "",
    "test": "npm run clean:test && ng test --no-watch --code-coverage",
    "****** ELECTRON BUILD ******": "",
    "electron": "ng build && electron .",
    "****** i18n ******": "",
    "i18n:extract": "npm run clean:translations && ng extract-i18n --output-path src/locale ",
    "i18n:build":"ng build --localize",
    "****** CORDOVA BUILD ******": "",
    "create:cordova": "cordova create cordova",
    "build:cordova": "ng build --base-href . --output-path ../CordovaMobileApp/www/",
    "cordova": "cd cordova && cordova run browser",
    "cordova:android": "cd cordova && cordova run android -lc",
    "****** WEB BUILD ******": "",
    "build:production": "npm run clean && npm test && npm run format && npm run build",
    "****** CLEAN ******": "",
    "clean": "npm run clean:test && npm run clean:compiled",
    "clean:test": "rimraf coverage",
    "clean:compiled": "npm run clean:public && npm run clean:platforms",
    "clean:public": "rimraf webpack-cache && rimraf ./dist/*",
    "clean:platforms": "rimraf dist && npm run clean:cordova && npm run clean:electron",
    "clean:cordova": "rimraf cordova",
    "clean:electron": "rimraf asar",
    "clean:translations": "rimraf src/locale"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "13.3.9",
    "@angular/cdk": "13.3.7",
    "@angular/common": "13.3.9",
    "@angular/compiler": "13.3.9",
    "@angular/core": "13.3.9",
    "@angular/forms": "13.3.9",
    "@angular/material": "13.3.7",
    "@angular/platform-browser": "13.3.9",
    "@angular/platform-browser-dynamic": "13.3.9",
    "@angular/router": "13.3.9",
    "bootstrap": "5.1.3",
    "file-saver": "2.0.5",
    "font-awesome": "4.7.0",
    "jquery": "3.6.0",
    "popper.js": "1.16.1",
    "rxjs": "7.5.5",
    "thin3-components": "3.0.0",
    "thin3-config": "3.0.0",
    "thin3-log": "3.0.0",
    "thin3-perfilado": "3.0.0",
    "thin3-webworker": "3.0.0",
    "xlsx": "0.18.5",
    "zone.js": "0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "13.3.6",
    "@angular-eslint/builder": "13.5.0",
    "@angular-eslint/eslint-plugin": "13.5.0",
    "@angular-eslint/eslint-plugin-template": "13.5.0",
    "@angular-eslint/schematics": "13.5.0",
    "@angular-eslint/template-parser": "13.5.0",
    "@angular/cli": "13.3.6",
    "@angular/compiler-cli": "13.3.9",
    "@angular/localize": "^13.3.9",
    "@types/jasmine": "4.0.3",
    "@types/node": "17.0.35",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "asar": "3.1.0",
    "autoprefixer": "10.4.7",
    "bootstrap": "5.1.3",
    "cordova": "11.0.0",
    "electron": "18.1.0",
    "eslint": "8.17.0",
    "font-awesome": "4.7.0",
    "jasmine-core": "4.1.1",
    "karma": "6.3.20",
    "karma-chrome-launcher": "3.1.1",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.0.1",
    "karma-jasmine-html-reporter": "1.7.0",
    "luxon": "2.4.0",
    "ngx-i18nsupport": "0.17.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5",
    "tslib": "2.4.0",
    "typescript": "4.6.4",
    "uglify-js": "3.15.5"
  }
}
